<launch>

  <!-- For releasing controller handle -->
  <arg name="release" default="false" />
  <arg name="controller_handle" default="" />

  <node if="$(arg release)" name="cobotta_gripper" pkg="cobotta_pick_place" type="gripper_server.py" required="true" 
        args="--release  --controller $(arg controller_handle)" output="screen"/>

  <node unless="$(arg release)" name="cobotta_gripper" pkg="cobotta_pick_place" type="gripper_server.py" required="true" 
        output="screen"/>

</launch>